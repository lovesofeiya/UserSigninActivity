<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" 
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/historyback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp" >

        <Button
            android:id="@+id/goBack"
            android:layout_width="55dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/goback"
            android:onClick="gotoHistoryItem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="History"
            android:textColor="#ffffff"
            android:textSize="30sp" />

    </LinearLayout>

<com.google.android.maps.MapView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_view"
    android:layout_width="match_parent"
    android:layout_height="169dp"
    android:layout_gravity="center_horizontal"
    android:apiKey="0xlO4PZvcgkOrFb03XSRi_b7-BR1YijkWf_bDAQ"
    android:clickable="true"
    android:enabled="true" />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="34dp"
     android:background="#6e6e6e" >
        
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="20dp"
               android:text="Runs"
               android:textColor="#ffffff"
               android:textSize="15sp"
               android:textStyle="italic" />

           <TextView
                android:id="@+id/graphic_step"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="5dp"
	            android:text="200"
	            android:textStyle = "italic"
	            android:textColor="#ffffff"
	            android:textSize="15sp" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="16dp"
               android:text="Cal"
               android:textColor="#ffffff"
               android:textSize="15sp"
               android:textStyle="italic" />

           <TextView
                android:id="@+id/graphic_cal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="5dp"
	            android:text="105"
	            android:textColor="#ffffff"
	            android:textSize="15sp" />
           <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="2dp"
	            android:text="Kj"
	            android:textStyle = "italic"
	            android:textColor="#ffffff"
	            android:textSize="15sp" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="15dp"
               android:text="Time"
               android:textColor="#ffffff"
               android:textSize="15sp"
               android:textStyle="italic" />

           <TextView
                android:id="@+id/graphic_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="10dp"
	            android:text="05'00''00"
	            android:textColor="#ffffff"
	            android:textSize="15sp" />
        
      </LinearLayout>
      
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginRight="5dp"
           android:background="@drawable/historygraph"
           android:orientation="vertical" >

           <LinearLayout
               android:layout_width="228dp"
               android:layout_height="110dp"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="10dp" >

               <TextView
                   android:id="@+id/graphic_lastrun"
                   android:layout_width="70dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_marginBottom="0dp"
                   android:text="Your last run was 2 days ago"
                   android:textColor="#ffffff"
                   android:textSize="15sp"
                   android:textStyle="bold" />

               <TextView
                   android:id="@+id/graphic_lastDist"
                   android:layout_width="110dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_marginBottom="0dp"
                   android:layout_marginLeft="50dp"
                   android:text="30 mi"
                   android:textColor="#ffffff"
                   android:textSize="30sp"
                   android:textStyle="bold" />

           </LinearLayout>

           <TextView
               android:id="@+id/graphic_detail"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical|center_horizontal"
               android:layout_marginLeft="0dp"
               android:layout_marginTop="10dp"
               android:text="You run 30 mi farther than last week"
               android:textColor="#6e6e6e"
               android:textSize="15sp" />
       </LinearLayout>
   
</LinearLayout>